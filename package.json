{
  "name": "hookmart",
  "version": "1.1.0",
  "description": "Stupid simple collection of common use-case React hooks",
  "author": "givensuman",
  "license": "MIT",
  "repository": "https://github.com/givensuman/hookmart",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esNext --outDir dist/esm",
    "test": "jest",
    "watch": "jest --watch"
  },
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^17.0.39",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "jest": "^27.5.1",
    "react-dom": "^17.0.2",
    "rollup": "^3.17.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript"
  ]
